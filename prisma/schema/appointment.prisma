model Appointment {
    id             String   @id @default(uuid())
    patientId      String
    doctorId       String
    scheduleId     String
    videoCallingId String
    status         String
    paymentStatus  String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@map("appointments")
}

model Payment {
    id                 String   @id @default(uuid())
    appointmentId      String
    amount             Float
    transactionId      String
    status             String
    paymentGatewayData Json?
    createdAt          DateTime @default(now())
    updatedAt          DateTime @updatedAt

    @@map("payments")
}

model Prescription {
    id            String    @id @default(uuid())
    appointmentId String
    doctorId      String
    patientId     String
    instructions  String
    followUpdate  DateTime?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt

    @@map("prescriptions")
}
